<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#F3E8FF"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/contact_initial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    tools:text="A"
                    android:textColor="#7C3AED"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Mom"
                    android:textColor="#1F2937"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    tools:text="+6012 345 6789"
                    android:textColor="#6B7280"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:alpha="0.4"
                android:contentDescription="Drag to reorder"
                android:src="@drawable/baseline_drag_handle_24"
                app:tint="#9CA3AF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_item_share"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.2"
                android:layout_marginEnd="6dp"
                android:text="Share Location"
                android:textColor="#16A34A"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0"
                app:backgroundTint="#DCFCE7"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_share"
                app:iconTint="#16A34A"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_item_call"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.8"
                android:layout_marginStart="6dp"
                android:text="Call"
                android:textColor="#DC2626"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0"
                app:backgroundTint="#FEE2E2"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_call"
                app:iconTint="#DC2626"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>